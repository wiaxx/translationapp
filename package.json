{
  "name": "bangerxdeepl",
  "version": "0.1.0",
  "description": "An Electron App for translate product text",
  "main": "electron.js",
  "homepage": "./",
  "author": "Amanda",
  "private": true,
  "proxy": "http://localhost:5000",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^0.26.1",
    "body-parser": "^1.19.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-serve": "^1.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.17.3",
    "html-to-text": "^8.1.0",
    "node-fetch": "^3.2.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-loading-skeleton": "^3.2.1",
    "react-scripts": "5.0.0",
    "styled-components": "^5.3.5",
    "web-vitals": "^2.1.4",
    "xlsx": "^0.18.5"
  },
  "scripts": {
    "cors-server": "node server/server.js",
    "server-start": "nodemon --watch server --exec babel-node server/server.js",
    "dev": "concurrently -k \"BROWSER=none npm start\" \"npm run server-start\" \"npm:electron\" ",
    "electron": "wait-on tcp:3000 && electron-forge start",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "package": "react-scripts build && electron-forge package",
    "make": "react-scripts build && electron-forge make",
    "server-build": "babel server --out-dir build-server",
    "electron-pack": "electron-builder -c.extraMetadata.main='./electron.js'",
    "preelectron-pack": "npm run build && npm run server-build"
  },
  "build": {
    "appId": "com.bangerxdeepl",
    "files": [
      "build/**/**/*",
      "server/**/**/*",
      "node_modules/**/*",
      "electron.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "icon": "src/icons/mac/icon.icns"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "concurrently": "^7.0.0",
    "electron": "^17.2.0",
    "electron-builder": "^22.14.13",
    "electron-devtools-installer": "^3.2.0",
    "wait-on": "^6.0.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/icons/mac/icon.icns",
        "name": "Bangerhead x DeepL Translation App"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "certificateFile": "./cert.pfx",
            "certificatePassword": "this-is-a-secret",
            "name": "translationapp"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
